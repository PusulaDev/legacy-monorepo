{
    "exclude": ["node_modules", "**/*.spec.ts", "src/__mocks__"],
    "include": ["src/**/*"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "lib": ["esnext", "es2017", "es7", "es6", "dom"],
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "allowJs": true,
        "paths": {
            "@/*": ["src/*"]
        },
        "noUnusedLocals": true
    }
}
